# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=isl
pkgver=0.26
pkgrel=11
epoch=
pkgdesc="A library for manipulating sets and relations of integer points bounded by linear constraints"
arch=('x86_64')
url="https://libisl.sourceforge.io"
license=('KZL')
depends=(gmp)
source=(
  $url/$pkgname-$pkgver.tar.xz
  # git+https://repo.or.cz/w/isl.git#tag=isl-$pkgver
)
sha256sums=('a0b5cb06d24f9fa9e77b55fabbe9a3c94a336190345c2555f9915bb38e976504')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
