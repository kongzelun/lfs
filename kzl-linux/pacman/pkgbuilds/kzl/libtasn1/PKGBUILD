pkgname=libtasn1
pkgver=4.0
pkgrel=1
epoch=
pkgdesc="The ASN.1 library used by GnuTLS, p11-kit"
arch=('x86_64')
url="https://www.gnu.org/software/libtasn1/"
license=('KZL')
