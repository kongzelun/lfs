# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libtasn1
pkgver=4.19.0
pkgrel=1
epoch=
pkgdesc="The ASN.1 library used by GnuTLS, p11-kit"
arch=('x86_64')
url="https://www.gnu.org/software/libtasn1/"
license=('KZL')
depends=(glibc)
source=(https://ftp.gnu.org/gnu/libtasn1/$pkgname-$pkgver.tar.gz{,.sig})
validpgpkeys=('B1D2BD1375BECB784CF4F8C4D73CF638C53C06BE')
sha256sums=('1613f0ac1cf484d6ec0ce3b8c06d56263cc7242f1c23b30d82d23de345a63f7a'
            'SKIP')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make -O
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
