build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --disable-doc

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
