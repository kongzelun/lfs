# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=gnu-efi
pkgver=3.0.14
pkgrel=1
epoch=1
pkgdesc="Library for building UEFI Applications using GNU toolchain"
arch=('x86_64')
url="https://sourceforge.net/projects/gnu-efi/"
license=('KZL')
options=(!strip !makeflags !buildflags)
source=(https://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
sha256sums=('b73b643a0d5697d1f396d7431448e886dd805668789578e3e1a28277c9528435')

build() {
  cd $pkgname-$pkgver

  make lib gnuefi inc apps
}

package() {
  cd $pkgname-$pkgver

  make INSTALLROOT="$pkgdir/" PREFIX="/usr" LIBDIR="/usr/lib" install


	install -d "$pkgdir"/usr/share/gnu-efi/apps/$arch/
	install -Dm0644 "$srcdir"/gnu-efi-$pkgver/$arch/apps/*.efi "$pkgdir"/usr/share/gnu-efi/apps/$arch/
}
