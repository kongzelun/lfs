# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=gnu-efi
pkgver=3.0.15
pkgrel=3
epoch=
pkgdesc="Library for building UEFI Applications using GNU toolchain"
arch=('x86_64')
url="https://sourceforge.net/projects/gnu-efi/"
license=('KZL')
source=(https://download.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.bz2)
sha256sums=('931a257b9c5c1ba65ff519f18373c438a26825f2db7866b163e96d1b168f20ea')

build() {
  cd $pkgname-$pkgver

  CFLAGS=""
  LDFLAGS=""

  make
  make apps
}

package() {
  cd $pkgname-$pkgver

  make INSTALLROOT="$pkgdir" PREFIX="/usr" install

  install -Dm644 $CARCH/apps/*.efi -t "$pkgdir/usr/share/$pkgname/apps/$CARCH/"
}
