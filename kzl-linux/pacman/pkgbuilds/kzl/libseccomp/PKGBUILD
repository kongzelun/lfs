# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libseccomp
pkgver=2.5.4
pkgrel=3
epoch=
pkgdesc="Enhanced seccomp library"
arch=('x86_64')
url="https://github.com/seccomp/libseccomp"
license=('KZL')
source=(git+https://github.com/seccomp/$pkgname#tag=v$pkgver)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --disable-python

  make
}

check() {
  cd $pkgname

  make check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
