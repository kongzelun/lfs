# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=file
pkgver=5.44
pkgrel=1
epoch=
pkgdesc="File type identification utility"
arch=('x86_64')
url="https://www.darwinsys.com/file/"
license=('KZL')
depends=(libseccomp)
options=(!libtool)
source=(ftp://ftp.astron.com/pub/$pkgname/$pkgname-$pkgver.tar.gz{,.asc})
validpgpkeys=('BE04995BA8F90ED0C0C176C471112AB16CB33B3A')
sha256sums=('3751c7fba8dbc831cb8d7cc8aff21035459b8ce5155ef8b0880a27d028475f3b'
            'SKIP')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --datadir=/usr/share/file \
    --enable-libseccomp

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
