# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=procps-ng
pkgver=3.3.17
pkgrel=1
epoch=1
pkgdesc="Utilities for monitoring your system and its processes"
arch=('x86_64')
url="https://gitlab.com/procps-ng/procps"
license=('KZL')
source=(git+https://gitlab.com/procps-ng/procps.git#tag=v$pkgver)
sha256sums=('SKIP')

prepare() {
  cd procps

  ./autogen.sh
}

build() {
  cd procps

  ./configure \
    --prefix=/usr \
    --exec-prefix=/ \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --libdir=/usr/lib \
    --enable-watch8bit \
    --disable-kill \
    --disable-modern-top \
    --with-systemd

  make
}

check() {
  cd procps

  make check
}

package() {
  cd procps

  make DESTDIR="$pkgdir/" install
}
