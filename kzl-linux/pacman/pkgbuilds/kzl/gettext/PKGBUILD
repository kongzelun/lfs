build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --disable-java \
    --disable-csharp \
    --enable-c++ \
    --enable-shared \
    --disable-static \
    --enable-nls \
    --disable-rpath \
    --without-emacs

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
