# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=python
pkgver=3.11.4
pkgrel=9
epoch=
pkgdesc="Next generation of the python high-level scripting language"
arch=('x86_64')
url="https://www.python.org/"
license=('KZL')
depends=(expat gdbm glibc libffi libnsl libxcrypt)
makedepends=(sqlite)
# makedepends=(sqlite tk)
source=(git+https://github.com/python/cpython.git#tag=v$pkgver)
sha256sums=('SKIP')

build() {
  cd cpython

  CFLAGS="${CFLAGS/-O2/-O3} -fno-semantic-interposition"
  LDFLAGS+=" -fno-semantic-interposition"

  ./configure \
    --prefix=/usr \
    --enable-shared=yes \
    --enable-optimizations=yes \
    --enable-loadable-sqlite-extensions=yes \
    --enable-ipv6=yes \
    --enable-big-digits=30 \
    --with-pkg-config=yes \
    --with-lto=no \
    --with-tzpath=/usr/share/zoneinfo \
    --with-system-expat=yes \
    --with-system-ffi=yes \
    --with-system-libmpdec=no \
    --with-decimal-contextvar=yes \
    --with-dbmliborder=gdbm:ndbm \
    --with-ensurepip=no \

  make
}

package() {
  cd cpython

  make DESTDIR="$pkgdir" install

  ln -s python${pkgver:0:4} "$pkgdir"/usr/bin/python
  # ln -s pip3 "$pkgdir"/usr/bin/pip
}
