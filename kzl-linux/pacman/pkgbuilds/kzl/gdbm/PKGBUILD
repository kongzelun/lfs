# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=gdbm
pkgver=1.23
pkgrel=1
epoch=
pkgdesc="A library of database functions that use extensible hashing and work similar to the standard UNIX dbm"
arch=('x86_64')
url="https://www.gnu.org/software/gdbm/gdbm.html"
license=('KZL')
depends=(glibc readline)
source=(https://ftp.gnu.org/gnu/gdbm/$pkgname-$pkgver.tar.gz{,.sig})
validpgpkeys=('325F650C4C2B6AD58807327A3602B07F55D0C732')
sha256sums=('74b1081d21fff13ae4bd7c16e5d6e504a4c26f7cde1dca0d963a484174bbcacd'
            'SKIP')

prepare() {
  cd $pkgname-$pkgver

  autoreconf -vfi
}

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
