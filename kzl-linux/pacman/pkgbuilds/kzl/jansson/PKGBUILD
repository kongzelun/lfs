prepare() {
  cd $pkgname

  autoupdate -vf
  autoreconf -vfi

  ./configure -C \
    --prefix=/usr
}

build() {
  cd $pkgname

  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install
}
