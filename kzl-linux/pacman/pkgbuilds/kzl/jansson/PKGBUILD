pkgname=jansson
pkgver=2.14
pkgrel=30
epoch=
pkgdesc="'C library for encoding, decoding and manipulating JSON data"
arch=('x86_64')
url="https://github.com/akheron/jansson"
license=('KZL')
makedepends=(
  libtool
)
source=(git+https://github.com/akheron/jansson.git#tag=v$pkgver)
sha256sums=('SKIP')

