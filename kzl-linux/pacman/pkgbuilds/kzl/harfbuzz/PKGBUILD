# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=harfbuzz
pkgver=4.2.0
pkgrel=1
epoch=1
pkgdesc="OpenType text shaping engine"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/HarfBuzz"
license=('KZL')
depends=(freetype2 glib2 graphite icu)
makedepends=(cairo gobject-introspection)
# makedepends=(chafa cairo gobject-introspection)
optdepents=("cairo: hb-view program")
#             "chafa: hb-view program")
provides=(harfbuzz-icu)
conflicts=(harfbuzz-icu)
replaces=(harfbuzz-icu)
source=(git+https://github.com/harfbuzz/harfbuzz#tag=$pkgver)
sha256sums=('SKIP')

build() {
  cd $pkgname

  CFLAGS="${CFLAGS/-fexceptions/}"
  CXXFLAGS="${CXXFLAGS/-fexceptions/}"

  meson setup \
    --prefix /usr \
    --libexecdir lib \
    --sbindir bin \
    --auto-features enabled \
    --buildtype plain \
    --wrap-mode nodownload \
    -D b_lto=true \
    -D b_pie=true \
    -D cairo=enabled \
    -D chafa=disabled \
    -D docs=disabled \
    -D graphite=enabled \
    -D graphite2=enabled \
    -D icu=enabled \
    -D introspection=enabled \
    build

  meson compile -C build
}

check() {
  cd $pkgname

  mkdir -p ="$srcdir"/tmp
  TMPDIR="$srcdir/tmp" meson test -C build
}

package() {
  cd $pkgname

  DESTDIR="$pkgdir/" meson install -C build
}
