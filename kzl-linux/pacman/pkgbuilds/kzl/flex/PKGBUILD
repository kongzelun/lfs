# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=flex
pkgver=2.6.4
pkgrel=1
epoch=
pkgdesc="A tool for generating text-scanning programs"
arch=('x86_64')
url="https://github.com/westes/flex"
license=('KZL')
depends=(glibc m4)
makedepends=(help2man texinfo)
source=(git+https://github.com/westes/flex.git#tag=v$pkgver)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr

  make -O
}

check() {
  cd $pkgname

  make -O -k check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
