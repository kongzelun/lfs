# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=flex
pkgver=2.6.4
pkgrel=14
epoch=
pkgdesc="A tool for generating text-scanning programs"
arch=('x86_64')
url="https://github.com/westes/flex"
license=('KZL')
groups=(base-devel)
depends=(m4)
makedepends=(
  autoconf
  automake
  bison
  flex
  help2man
  libtool
  make
  texinfo
)
source=(git+https://github.com/westes/flex.git#tag=v$pkgver)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname

  make check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" install
}
