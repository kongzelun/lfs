# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libarchive
pkgver=3.7.7
pkgrel=3
epoch=
pkgdesc="A portable, efficient C library that can read and write streaming archives in a variety of formats"
arch=('x86_64')
url="https://libarchive.org/"
license=('KZL')
depends=(
  acl
  attr
  bzip2
  libxml2
  lz4
  openssl
  xz
  zlib
  zstd
)
makedepends=(
  cmake
)
source=(git+https://github.com/libarchive/libarchive.git#tag=v$pkgver)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  cmake -LAH -S . -B build \
    -D CMAKE_BUILD_TYPE=Release \
    -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_C_FLAGS="$CFLAGS $CPPFLAGS" \
    -D CMAKE_CXX_FLAGS="$CXXFLAGS $CPPFLAGS"
}


build() {
  cd $pkgname

  cmake --build build
}

check() {
  cd $pkgname

  cmake --build build --target tests
}

package() {
  cd $pkgname

  DESTDIR="$pkgdir" cmake --build build --target install
}
