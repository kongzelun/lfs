# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libnsl
pkgver=2.0.0
pkgrel=1
epoch=1
pkgdesc="Public client interface library for NIS(YP) and NIS+"
arch=('x86_64')
url="https://github.com/thkukuk/libnsl"
license=('KZL')
depends=(libtirpc)
source=($pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz)
sha256sums=('eb37be57c1cf650b3a8a4fc7cd66c8b3dfc06215b41956a16325a9388171bc40')

prepare() {
  cd $pkgname-$pkgver

  autoreconf -ifv
}

build() {
  cd $pkgname-$pkgver

  autoreconf -fi
  ./configure \
    --prefix=/usr \
    --disable-static

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
