pkgname=base
pkgver=20230413
pkgrel=1
epoch=
pkgdesc="Minimal package set"
arch=('any')
license=('KZL')
depends=(filesystem
         glibc 
         zlib bzip2 gzip lz4 xz zstd tar
         gcc
         bash perl
         grep sed gawk file findutils
         gettext
         openssl ca-certificates 
         pam shadow
         curl
         python
         coreutils util-linux
         iptables
         systemd
         sudo
         pacman
         procps-ng psmisc
         iputils iproute2
         pciutils usbutils)
optdepends=("linux: Linux kernel")
source=(os-release)
sha256sums=('c9bd31b149f9e44fecfa5db1153318914132f0bedf2090a35736d122cef0ceb8')

pkgver() {
  date +%Y%m%d
}

package() {
  install -D -m 644 "$srcdir"/os-release "$pkgdir"/etc/os-release
  install -D -m 644 "$srcdir"/os-release "$pkgdir"/usr/share/factory/etc/os-release
}
