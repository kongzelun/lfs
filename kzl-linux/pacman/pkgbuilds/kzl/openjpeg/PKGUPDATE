new_version=$(curl -L -A 'Mozilla/5.0' --stderr - https://github.com/uclouvain/openjpeg/tags | grep -oP '(?<=/openjpeg/releases/tag/v)\d\.\d\.\d' | sort -V | tail -n1)

post_update() {
    cd "$BUILDDIR/$pkgname/src/$pkgname"
    cmake -LAH -S . -B tmp -DCMAKE_BUILD_TYPE=Release > "$PKGBUILDDIR"/help.txt
}
