new_version=$(curl -L -A 'Mozilla/5.0' --stderr - https://ftp.gnu.org/gnu/binutils/ | grep -oP "binutils-\K\d+\.\d+(\.\d+)?" | sort -V | tail -n1)

post_update() {
    cd "$BUILDDIR/$pkgname/src/binutils-gdb"
    ./configure --help >"$PKGBUILDDIR"/help.txt
    for config in $(find . -mindepth 2 -name 'configure' -type f); do
        "$config" --help >>"$PKGBUILDDIR"/help.txt
    done
}
