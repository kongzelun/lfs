# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=gmp
pkgver=6.2.1
pkgrel=9
epoch=
pkgdesc="A free library for arbitrary precision arithmetic"
arch=('x86_64')
url="https://gmplib.org"
license=('KZL')
source=($url/download/gmp/$pkgname-$pkgver.tar.zst{,.sig})
validpgpkeys=('343C2FF0FBEE5EC2EDBEF399F3599FF828C67298')
sha256sums=('8a0c3596c09855450eb67f6e81c5fb6a10babfc4a803d012a877b54c430ea66b'
            'SKIP')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --enable-cxx \
    --enable-fat

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
