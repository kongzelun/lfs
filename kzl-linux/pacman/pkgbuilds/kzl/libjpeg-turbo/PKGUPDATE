new_version=$(curl -L -A 'Mozilla/5.0' --stderr - https://github.com/libjpeg-turbo/libjpeg-turbo/tags | grep -Po '(?<=/libjpeg-turbo/releases/tag/)\d\.\d\.[1-7](\.\d)?' | sort -V | tail -1)

post_update() {
    cd "$BUILDDIR/$pkgname/src/$pkgname"
    cmake -LAH -S . -B tmp -DCMAKE_BUILD_TYPE=Release > "$PKGBUILDDIR"/help.txt
}
