# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=readline
pkgver=8.2
pkgrel=6
epoch=
pkgdesc="GNU readline library"
arch=('x86_64')
url="https://tiswww.case.edu/php/chet/readline/rltop.html"
license=('KZL')
depends=(ncurses)
backup=(etc/inputrc)
options=(!emptydirs)
source=(git+https://git.savannah.gnu.org/git/readline.git#branch=master
        inputrc)
sha256sums=('SKIP'
            '3fcb135d5dfe1ce200057396c13cc7e65551864167fcd64f32868f30fd975cba')

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --with-curses

  make SHOBJ_CFLAGS='-fPIC' SHLIB_LIBS='-lncursesw'

}

package() {
  cd $pkgname

  make SHOBJ_CFLAGS='-fPIC' SHLIB_LIBS='-lncursesw' DESTDIR="$pkgdir/" install

  install -Dm644 "$srcdir"/inputrc "$pkgdir"/etc/inputrc
}
