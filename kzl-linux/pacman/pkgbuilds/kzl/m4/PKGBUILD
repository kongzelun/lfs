# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=m4
pkgver=1.4.19
pkgrel=1
epoch=
pkgdesc="An implementation of the traditional Unix macro processor"
arch=('x86_64')
url="https://www.gnu.org/software/m4/"
license=('KZL')
depends=(libsigsegv)
source=(git+https://git.savannah.gnu.org/git/m4.git#tag=v$pkgver
        git+https://git.savannah.gnu.org/git/gnulib.git)
sha256sums=('SKIP'
            'SKIP')

prepare() {
	cd $pkgname

  ./bootstrap --gnulib-srcdir="$srcdir/gnulib"
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr

  make -O
}

check() {
  cd $pkgname

	make -O check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
