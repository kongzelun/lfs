build() {
  cd $pkgname-$pkgver

  # for gcc-13
  # CFLAGS="$CFLAGS -Wno-error"

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

	make check || warning "Check failed."
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
