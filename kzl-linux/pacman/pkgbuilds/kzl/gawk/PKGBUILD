# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=gawk
pkgver=5.1.0
pkgrel=1
epoch=
pkgdesc="GNU version of awk"
arch=('x86_64')
url="https://www.gnu.org/software/gawk"
license=('KZL')
depends=(glibc mpfr readline)
provides=(awk)
source=(git+https://git.savannah.gnu.org/git/gawk.git#tag=$pkgname-$pkgver)
sha256sums=('SKIP')

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --without-libsigsegv

  make -O
}

check() {
  cd $pkgname

  make -O check
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
