# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=cmake
pkgver=3.31.5
pkgrel=2
epoch=
pkgdesc="A powerful software build system"
arch=('x86_64')
url="https://www.cmake.org/"
license=('KZL')
groups=(base-devel)
depends=(
  # cppdap
  curl
  expat
  jsoncpp
  libarchive
  libuv
  nghttp2
  rhash
)
# depends=(curl cppdap expat jsoncpp libarchive libuv nghttp2 rhash)
makedepends=(
  make
  # qt6
)
# optdepends=("qt6: Qt-based GUI")
source=(git+https://github.com/Kitware/CMake.git#tag=v$pkgver)
sha256sums=('e7297b40a86117d57d474972dcb8a8dfc9af8c264d946acfcd0c88dd2da6772c')

build() {
  cd CMake

  ./bootstrap \
    --prefix=/usr \
    --datadir=share/cmake \
    --docdir=share/doc/cmake \
    --mandir=share/man \
    --parallel=$(nproc) \
    --system-libs \
    --no-system-cppdap \
    --system-curl \
    --system-expat \
    --system-jsoncpp \
    --system-zlib \
    --system-bzip2 \
    --system-liblzma \
    --system-nghttp2 \
    --system-zstd \
    --system-libarchive \
    --system-librhash \
    --system-libuv \
    --no-qt-gui

  make
}

package() {
  cd CMake

  make DESTDIR="$pkgdir" install
}
