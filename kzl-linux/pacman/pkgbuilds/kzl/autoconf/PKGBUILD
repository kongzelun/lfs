pkgname=autoconf
pkgver=2.72
pkgrel=2
epoch=
pkgdesc="A GNU tool for automatically configuring source code"
arch=('any')
url="https://www.gnu.org/software/autoconf/"
license=('KZL')
depends=(m4)
# makedepends=(autoconf)
# source=(git+http://git.savannah.gnu.org/r/autoconf.git#tag=v$pkgver)
source=(https://ftp.gnu.org/gnu/autoconf/$pkgname-$pkgver.tar.xz{,.sig})
validpgpkeys=('82F854F3CE73174B8B63174091FCC32B6769AA64')
sha256sums=('ba885c1319578d6c94d46e9b0dceb4014caafe2490e437a0dbca3f270a223f5a'
            'SKIP')

# prepare() {
#   cd $pkgname

#   autoreconf -vfi
# }

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

	make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install

  rm -f "$pkgdir"/usr/share/info/standards.info
}
