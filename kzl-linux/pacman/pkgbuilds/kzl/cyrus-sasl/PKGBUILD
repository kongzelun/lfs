# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=cyrus-sasl
pkgver=2.1.28
pkgrel=1
epoch=
pkgdesc="An implementation of Cyrus Simple Authentication Service Layer (SASL)"
arch=('x86_64')
url="http://www.cyrusimap.org/sasl/"
license=('KZL')
depends=(audit db e2fsprogs glibc keyutils krb5 libxcrypt openssl pam)
source=(git+https://github.com/cyrusimap/cyrus-sasl.git#tag=$pkgname-$pkgver)
sha256sums=('SKIP')

prepare() {
  cd $pkgname

  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --enable-static=no \
    --enable-shared=yes \
    --enable-gssapi=yes \
    --with-dblib=berkeley \
    --with-saslauthd=/var/run/saslauthd

  make -O
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
