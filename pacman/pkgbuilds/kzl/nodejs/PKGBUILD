# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=nodejs
pkgver=17.6.0
pkgrel=1
epoch=1
pkgdesc="Evented I/O for V8 javascript"
arch=('x86_64')
url="https://nodejs.org/"
license=('KZL')
# depends=(brotli c-ares icu libnghttp2 libuv openssl)
depends=(c-ares icu libnghttp2 libuv openssl)
provides=(npm)
conflicts=(npm)
replaces=(npm)
source=(https://github.com/nodejs/node/archive/v$pkgver.tar.gz)
sha256sums=('80d64b76d94dffa6d8fef65f7d1195d110639ae55de9810c2c8dac422762422d')

build() {
  cd node-$pkgver

  CFLAGS="${CFLAGS/-O2/-O3}"
  CXXFLAGS="${CXXFLAGS/-O2/-O3}"

  ./configure \
    --prefix=/usr \
    --experimental-http-parser \
    --shared-libuv \
    --shared-nghttp2 \
    --shared-openssl \
    --shared-zlib \
    --shared-cares \
    --with-intl=system-icu

  make
}

check() {
  cd node-$pkgver

  make test
}

package() {
  cd node-$pkgver

  make DESTDIR="$pkgdir/" install
}
