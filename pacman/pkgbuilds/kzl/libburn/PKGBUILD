# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libburn
pkgver=1.5.4
pkgrel=1
epoch=1
pkgdesc="Library for reading, mastering and writing optical discs"
arch=('x86_64')
url="https://dev.lovelyhq.com/libburnia"
license=('KZL')
source=(https://files.libburnia-project.org/releases/${pkgname}-${pkgver}.tar.gz{,.sig})
sha256sums=('525059d10759c5cb8148eebc863bb510e311c663603da7bd2d21c46b7cf63b54'
            'SKIP')
validpgpkeys=('44BC9FD0D688EB007C4DD029E9CBDFC0ABC0A854')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --disable-static

  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
