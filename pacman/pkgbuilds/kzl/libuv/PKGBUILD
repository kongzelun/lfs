# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libuv
pkgver=1.43.0
pkgrel=1
epoch=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('KZL')
source=($url/archive/v$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('9e27825a55279de69a7c43e42d509fd1337c9bece2547c761e91a1592e91cc4d')

prepare() {
  cd $pkgname-$pkgver

	./autogen.sh
}

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
