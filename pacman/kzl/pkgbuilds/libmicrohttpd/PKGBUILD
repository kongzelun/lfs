# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=libmicrohttpd
pkgver=0.9.75
pkgrel=1
epoch=1
pkgdesc="A small C library that is supposed to make it easy to run an HTTP server as part of another application"
arch=('x86_64')
url="https://www.gnu.org/software/libmicrohttpd/"
depends=(gnutls)
checkdepends=(curl)
source=(https://ftp.gnu.org/gnu/libmicrohttpd/$pkgname-$pkgver.tar.gz{,.sig})
sha256sums=('9278907a6f571b391aab9644fd646a5108ed97311ec66f6359cebbedb0a4e3bb'
            'SKIP')
validpgpkeys=('EA812DBEFA5A7EF17DA8F2C1460A317C3326D2AE'
              'D8423BCB326C7907033929C7939E6BE1E29FC3CC')

build() {
  cd $pkgname-$pkgver

  ./configure \
    --prefix=/usr \
    --enable-curl \
    --enable-https \
    --enable-largefile \
    --enable-messages \
    --disable-dependency-tracking \
    --disable-examples \
    --with-pic

  make
}

check() {
  cd $pkgname-$pkgver

  make check
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir/" install
}
