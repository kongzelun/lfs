# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=liburing
pkgver=2.0
pkgrel=1
epoch=1
pkgdesc="Linux-native io_uring I/O access library"
arch=('x86_64')
url="https://git.kernel.dk/cgit/liburing/"
license=('KZL')
source=(git+https://git.kernel.dk/liburing#commit=8aac320ae8445c5434ab3be1761414a5247e5d42)
sha256sums=('SKIP')

build() {
  cd $pkgname

  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man

  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir/" install
}
