# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=icu
pkgver=69.1
pkgrel=1
epoch=1
pkgdesc="International Components for Unicode library"
arch=('x86_64')
url="http://site.icu-project.org/home"
license=('KZL')
source=(https://github.com/unicode-org/icu/releases/download/release-${pkgver//./-}/${pkgname}4c-${pkgver//./_}-src.tgz)
sha256sums=('4cba7b7acd1d3c42c44bb0c14be6637098c7faf2b330ce876bc5f3b915d09745')

build() {
  cd $pkgname/source

  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --mandir=/usr/share/man

  make
}

check() {
  cd $pkgname/source

  make -k check || warning "Check failed."
}

package() {
  cd $pkgname/source

  make DESTDIR="$pkgdir/" install
}
