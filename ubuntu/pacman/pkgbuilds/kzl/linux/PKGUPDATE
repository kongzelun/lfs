new_version=$(curl -L -A 'Mozilla/5.0' --stderr - https://www.kernel.org | grep -P -A 1 "<td>stable:</td>" | grep -oP '6\.\d+\.\d+' | sort -V | tail -n1)

post_update() {
    cd "$BUILDDIR/$pkgname/src/$pkgname"
    make O=build nconfig
    cp -v build/.config "$PKGBUILDDIR"/config
    cd "$PKGBUILDDIR"
    updpkgsums
}
