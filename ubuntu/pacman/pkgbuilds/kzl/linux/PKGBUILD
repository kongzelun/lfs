# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgbase=linux
pkgname=(linux linux-headers)
pkgver=6.1.33
pkgrel=1
epoch=
pkgdesc="LTS Linux Kernel"
arch=('x86_64')
url="https://www.kernel.org"
license=('KZL')
options=(!strip)
source=(git+https://git.kernel.org/pub/scm/linux/kernel/git/stable/linux.git#branch=linux-${pkgver%.*}.y
        config)
sha256sums=('SKIP'
            '776c674051aa5fcc43d7373f4b6b7194213c87e51699d79aff5b866c61d4bae0')

export KBUILD_BUILD_HOST=Ubuntu
export KBUILD_BUILD_USER=kzl
export KBUILD_BUILD_TIMESTAMP="$(date -u '+%Y/%m/%d %T %z')"

prepare() {
  cd $pkgbase

  mkdir -p build

  cp "$srcdir"/config build/.config

  make O=build nconfig
}

build() {
  cd $pkgbase

  make O=build all
}

package_linux() {
  cd $pkgbase

  local kernelrelease=$(make O=build -s kernelrelease)
  local image_name=$(make O=build -s image_name)
  local modulesdir="/usr/lib/modules/$kernelrelease"

  make INSTALL_MOD_PATH="$pkgdir/usr" O=build modules_install

  install -d -m 755 $pkgdir/boot/efi/
  make INSTALL_PATH="$pkgdir/boot" O=build install
  cp "$pkgdir"/boot/vmlinuz-$kernelrelease "$pkgdir"/boot/efi/vmlinuz-$kernelrelease

  rm "$pkgdir"/usr/lib/modules/$kernelrelease/{build,source}
}

package_linux-headers() {
  cd $pkgbase

  local kernelrelease=$(make O=build -s kernelrelease)

  install -d -m 0755 "$pkgdir"/usr/lib/modules/$kernelrelease/
  cp -a "$srcdir/$pkgbase" "$pkgdir"/usr/lib/modules/$kernelrelease/source
  ln -sr "$pkgdir"/usr/lib/modules/$kernelrelease/source/build "$pkgdir"/usr/lib/modules/$kernelrelease/build
}
