post_install() {
  local _platform="$(uname -i)-$(uname -s | tr '[:upper:]' '[:lower:]')"

  source etc/profile.d/texlive.sh
  opt/TeXLive/bin/"$_platform"/mktexlsr
  opt/TeXLive/bin/"$_platform"/fmtutil-sys --all
  opt/TeXLive/bin/"$_platform"/mtxrun --generate >/dev/null
  opt/TeXLive/bin/"$_platform"/updmap-sys
}

post_upgrade() {
  post_install
}
