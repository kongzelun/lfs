# Maintainer: Zelun Kong <zelun.kong@outlook.com>

pkgname=python
pkgver=3.13.1
pkgrel=6
epoch=
pkgdesc="Next generation of the python high-level scripting language"
arch=('x86_64')
url="https://www.python.org/"
license=('KZL')
source=(git+https://github.com/python/cpython.git#tag=v$pkgver)
sha256sums=('4d5f60b4a4e3e32e2236702db45f56606c1376a12490b4db9faeac3ba50f06ec')

build() {
  cd cpython

  CFLAGS="${CFLAGS/-O2/-O3}"

  ./configure \
    --prefix=/usr/local \
    --enable-shared \
    --enable-optimizations \
    --enable-loadable-sqlite-extensions \
    --enable-ipv6 \
    --with-pkg-config=yes \
    --with-lto=yes \
    --with-system-expat=yes \
    --with-system-libmpdec=no \
    --with-dbmliborder=gdbm:ndbm \
    --with-doc-strings=yes \
    --with-readline=editline \
    --with-ensurepip=no

  make
}

package() {
  cd cpython

  make DESTDIR="$pkgdir" install
  rm -vr "$pkgdir/usr/local/lib/python${pkgver%.*}"/{test,idlelib/idle_test}
}
